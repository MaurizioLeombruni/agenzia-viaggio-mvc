@model List<Travel>
@{
    ViewData["Title"] = "Tours";
}



<div class="container align-content-center py-3">

    <div class="row text-center mb-5">
        <h1>Our amazing tours</h1>
        <p>Questi sono i nostri splendidi viaggi</p>
    </div>


    <div class="row border-white bg-transparent text-center">



        @foreach (Travel travel in Model)
        {
            <div class="col-sm-4 border-white p-0 mb-5">
                <div class="card shadow mx-3  bg-white rounded">
                    <img src="@travel.ImageUrl" class="card-img-top" alt="foto">
                    <div class="card-body bg-@travel.Color text-black">
                        <h3 class="card-title">@travel.Name</h3>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@travel.Description</li>
                        <li class="list-group-item">
                            <p class="text-@travel.Color">@travel.Days days - @travel.Destinations destinations</p>
                            <p class="text-secondary"><b class="text-black">@travel.Price€</b>/persona</p>
                        </li>
                    </ul>
                    <div class="card-body">
                        <button type="button" class="btn btn-@travel.Color btn-lg text-black">Prenota Ora</button>
                    </div>
                </div>
            </div>
        }

    </div>
    
</div>




